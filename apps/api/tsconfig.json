{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "paths": {
            "@repo/db": [
                "../../packages/db/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../../packages/db/src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}